# Auto detect text files and perform LF normalization
* text=auto

# Web platform files
/web/** text eol=lf
/web/index.html text eol=lf
/web/manifest.json text eol=lf

# Desktop platform files - Windows
/windows/** text eol=crlf
/windows/CMakeLists.txt text eol=crlf
/windows/runner/** text eol=crlf

# Desktop platform files - Linux
/linux/** text eol=lf
/linux/CMakeLists.txt text eol=lf
/linux/runner/** text eol=lf

# Desktop platform files - macOS
/macos/** text eol=lf
/macos/Runner/** text eol=lf

# Flutter specific
*.dart text eol=lf
pubspec.yaml text eol=lf
pubspec.lock text eol=lf
analysis_options.yaml text eol=lf

# Source files
*.dart text diff=dart

# Documentation
*.md text eol=lf
README.md text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Build files (binary)
*.apk binary
*.app binary
*.ipa binary
*.dmg binary
*.exe binary
*.so binary
*.dylib binary
*.a binary
*.jar binary
*.class binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Archives
*.zip binary
*.tar binary
*.gz binary

